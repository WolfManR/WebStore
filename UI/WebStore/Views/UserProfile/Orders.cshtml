@model IEnumerable<UserOrderViewModel>
@{
    Layout = "_UserProfileLayout";
    ViewData["Title"] = "User orders";
}

<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Sum</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
        }
        @foreach (var order in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@order.Name</td>
                <td>@order.Address</td>
                <td>@order.Phone</td>
                <td>@order.TotalSum</td>
            </tr>
        }
    </tbody>
</table>