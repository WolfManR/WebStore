@model CatalogViewModel
@{
    ViewBag.Title = "Shop";
}

<partial name="Partial/_Advertisement" />

<section>
    <div class="container">
        <vc:bread-crumbs />

        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSideBar" />
            </div>

            <div class="col-sm-9 padding-right">
                <div id="catalog-items-container">
                    <partial name="Partial/_FeaturesItems" model="Model.Products" />
                </div>

                @*important use open and close tags in tag helpers that will generate its content(O <tag></tag> ; X <tag/>)*@
                <paging page-model="@Model.PageViewModel" page-action="Products" page-url-SectionId="@Model.SectionId" page-url-BrandId="@Model.BrandId"></paging>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/lib/jquery-loading-overlay/loadingoverlay.min.js"></script>
    <script src="~/js/Shop/CatalogLogik.js" asp-append-version="true"></script>
    <script>
        $(function() {
            Catalog.init({
                getUrl: "@Url.Action("GetCatalogHtml","Shop")"
            });
        })
    </script>
}