@model EmployeeViewModel
@{
    ViewBag.Title = $"Delete Employee id: {Model.Id}";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <h3>Are you sure you want to delete this?</h3>
    <hr />

    <div>
        <dl class="dl-horizontal">
            <dt>Имя</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>

            <dt>Фамилия</dt>
            <dd>@Html.DisplayFor(model => model.Surname)</dd>

            <dt>Отчество</dt>
            <dd>@Html.DisplayFor(model => model.Patronymic)</dd>

            <dt>Возраст</dt>
            <dd>@Html.DisplayFor(model => model.Age)</dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            <a asp-action="Index">Назад к списку</a>
        </form>
    </div>
</div>