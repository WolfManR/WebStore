@model IEnumerable<WebStore.Models.Employee>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Сотрудники</title>
</head>
<body>
    <h3>Сотрудники</h3><hr />

    <table class="table">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Отчество</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.Surname</td>
                    <td>@item.Patronymic</td>

                    <td><a href="/Employees/Details/@item.Id">Инфо</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
